<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="monti.com.firebasePetagram" >
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/huella"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="monti.com.firebasePetagram.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="monti.com.firebasePetagram.Favoritas"
            android:parentActivityName="monti.com.firebasePetagram.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="monti.com.firebasePetagram.MainActivity"></meta-data>
        </activity>
        <activity
            android:name="monti.com.firebasePetagram.Contacto"
            android:parentActivityName="monti.com.firebasePetagram.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="monti.com.firebasePetagram.MainActivity"></meta-data>
        </activity>
        <activity
            android:name="monti.com.firebasePetagram.Acerca"
            android:parentActivityName="monti.com.firebasePetagram.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="monti.com.firebasePetagram.MainActivity"></meta-data>
        </activity>
        <activity
            android:name="monti.com.firebasePetagram.DetalleFoto"
            android:parentActivityName="monti.com.firebasePetagram.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="monti.com.firebasePetagram.MainActivity"></meta-data>
        </activity>
        <activity
            android:name="monti.com.firebasePetagram.ConfigurarCuenta"
            android:parentActivityName="monti.com.firebasePetagram.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="monti.com.firebasePetagram.MainActivity"></meta-data>
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
          App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
            -->
        <service
            android:name=".NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".NotificationIdTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
         </application>

</manifest>